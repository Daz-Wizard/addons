<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.dazwizard" name="Daz Wizard" version="1.0" provider-name="Daz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.six"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Daz Wizard</summary>
    <description lang="en">Daz Wizard allows you to get access to the latest Daz Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.daz" name="Daz Repository" version="1.0" provider-name="Daz">
	<extension point="xbmc.addon.repository" name="Daz Repository">
		<info compressed="false">https://raw.githubusercontent.com/Daz-Wizard/addons/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/Daz-Wizard/addons/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/Daz-Wizard/addons/raw/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Daz Wizard Repository</summary>
		<description>Daz Wizard Repository</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
